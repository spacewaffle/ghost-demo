{{!< default}}

{{! This is a page template. A page outputs content just like any other post, and has all the same
    attributes by default, but you can also customise it to behave differently if you prefer. }}

<main class="content" role="main">

    <article class="{{post_class}}">

        <header class="post-header">
            <a class="blog-logo" href="{{@blog.url}}">
                {{#if @blog.logo}}
                    <img src="{{@blog.logo}}" alt="Blog Logo" />
                {{else}}
                    <span class="blog-title">{{@blog.title}}</span>
                {{/if}}
            </a>
            <div class="navbar page">
                <a class="nav_links" href="/">Home</a>
                <a class="nav_links" href="/about">About</a>
                <a class="nav_links" href="/schedule">Schedule</a>
                <a class="nav_links" href="/photos">Photos</a>
                <a class="nav_links" href="/pricing">Pricing</a>
                <a class="nav_links" href="/location">Location</a>
                <a class="nav_links" href="/contact">Contact</a>
            </div>
        </header>

        {{#post}}

            <section class="post-content">
                {{content}}
            </section>

        {{/post}}

    </article>

</main>
